<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--iv_calllayout2 tv_mobilenumberlayout2-->

    <!--iv_weblayout2 tv_websitelayout2-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@drawable/f2_border" />

        <ImageView
            android:id="@+id/iv_logolayout2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentBottom="true"
            android:background="#58595b"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ll_f2_email"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/iv_emaillayout2"
                    android:src="@drawable/f2_email"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="your company email@gmail.com"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:id="@+id/tv_emaillayout2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ll_f2_web"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/iv_weblayout2"
                    android:src="@drawable/f2_web"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="www.your website.com"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:id="@+id/tv_websitelayout2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ll_f2_call"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:id="@+id/iv_calllayout2"
                    android:src="@drawable/f2_call"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+91 12345 67895"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:id="@+id/tv_mobilenumberlayout2"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

        </LinearLayout>


        <!--
                <com.example.newfestivalpost.StickerClasses.StickerView
                    android:id="@+id/sticker_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    app:showBorder="true"
                    app:showIcons="true" />
        -->

    </RelativeLayout>
</LinearLayout>